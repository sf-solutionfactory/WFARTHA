<link type="text/css" href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/formatos.js"></script>
<table class="table mdl-data-table striped" id="table" style="width:100%">
    <thead>
        <tr>
            <th class="lbl_num">
                @Html.DisplayNameFor(model => model.NUM_DOC)
            </th>
            <th id="lbl_tsol">
                @Html.DisplayNameFor(model => model.TSOL)
            </th>
            <th id="lbl_fechad">
                @Html.DisplayNameFor(model => model.FECHAD)
            </th>
            <th id="lbl_horac">
                @Html.DisplayNameFor(model => model.HORAC)
            </th>
            <th id="lbl_estatus">
                @Html.DisplayNameFor(model => model.ESTATUS)
            </th>
            <th id="lbl_concepto">
                @Html.DisplayNameFor(model => model.CONCEPTO)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td onclick="document.location='@Url.Action("Details", "Solicitudes", new { id = item.NUM_DOC })'" style="cursor:pointer">
                        @item.NUM_DOC
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TSOL.TSOLTs.Where(a => a.SPRAS_ID.Equals("ES")).FirstOrDefault().TXT020)
                    </td>
                    <td>
                        @if (item.FECHAD != null) {
                            try{ @(item.FECHAD.Value.Day + "/"+ item.FECHAD.Value.Month +"/"+ item.FECHAD.Value.Year); } catch (Exception) { };
                        }
                    </td>
                    <td>
                        @item.HORAC.Value.ToString().Split('.')[0]
                    </td>
                    @if (item.ESTATUS_WF.Equals("P") | item.ESTATUS_WF.Equals("S"))
                    {
                        <td class="yellow darken-2 white-text">
                            <div class="lbl_pending">Pendiente</div>
                        </td>
                    }
                    else if (item.ESTATUS_WF.Equals("A"))
                    {
                        if (item.ESTATUS.Equals("C"))
                        {
                            <td class="green darken-1 white-text">
                                <div class="lbl_contab">Por contabilizar</div>
                            </td>
                        }
                        else if (item.ESTATUS.Equals("P"))
                        {
                            <td class="green darken-1 white-text">
                                <div class="lbl_contab">Contabilizar SAP</div>
                            </td>
                        }
                        else
                        {
                            <td class="green darken-1 white-text">
                                <div class="lbl_approved">Aprobada</div>
                            </td>
                        }
                    }
                    else if (item.ESTATUS_WF.Equals("R"))
                    {
                        <td class="red darken-1 white-text">
                            <div class="lbl_rejected">Rechazada</div>
                        </td>
                    }
                    else if (item.ESTATUS_WF.Equals("T"))
                    {
                        <td class="yellow darken-2 white-text">
                            <div class="lbl_tax">Pendiente Tax</div>
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.CONCEPTO)
                    </td>
                </tr>
            }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable({
            language: {
            //"url": "../Scripts/lang/" + ".json"
            "url": "../Scripts/lang/ES.json"
        },
        "paging": true,
         "ordering": true,
        "info": true
        });
    });
</script>

